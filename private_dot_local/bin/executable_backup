#!/bin/bash
#
# Backup script
#

BACKUPDIR="rclone:onedrive:backup"

case "$1" in
"do") restic --repo "$BACKUPDIR" backup \
  ~/.ssh \
  ~/.config/fish/functions/local.bash \
  ~/documents \
  ~/Downloads \
  ~/notes \
  ~/pictures \
  ~/private \
  ~/work ;;
"list") restic --repo "$BACKUPDIR" snapshots ;;
"prune") restic --repo "$BACKUPDIR" prune ;;
*) echo "Do nothing" "$@" ;;
esac
