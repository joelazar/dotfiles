#!/bin/bash

# FONTTEST SCRIPT
# -----------------
# Print all avaliable variants of chosen terminal font

echo -en "Normal - abcdefghijklmnopqrstuvwxyz - ABCDEFGHIJKLMNOPQRSTUVWXYZ - 0123456789\n"
echo -en "\033[1mBold - abcdefghijklmnopqrstuvwxyz - ABCDEFGHIJKLMNOPQRSTUVWXYZ - 0123456789\033[0m\n"
echo -en "\033[2mDim - abcdefghijklmnopqrstuvwxyz - ABCDEFGHIJKLMNOPQRSTUVWXYZ - 0123456789\033[0m\n"
echo -en "\033[3mItalic - abcdefghijklmnopqrstuvwxyz - ABCDEFGHIJKLMNOPQRSTUVWXYZ - 0123456789\033[0m\n"
echo -en "\033[3;1mBold Italic - abcdefghijklmnopqrstuvwxyz - ABCDEFGHIJKLMNOPQRSTUVWXYZ - 0123456789\033[0m\n"
echo -en "\033[4mUnderline - abcdefghijklmnopqrstuvwxyz - ABCDEFGHIJKLMNOPQRSTUVWXYZ - 0123456789\033[0m\n"
echo -e "\e[9mStrikethrough - abcdefghijklmnopqrstuvwxyz - ABCDEFGHIJKLMNOPQRSTUVWXYZ - 0123456789\e[0m\n"

echo
echo "== === !== >= <= =>"
echo

echo "Nerd fonts:"
echo                                                                                                                                                               
