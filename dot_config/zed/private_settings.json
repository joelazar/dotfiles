{
  // ══════════════════════════════════════════════════════════════════════════════
  // APPEARANCE
  // ══════════════════════════════════════════════════════════════════════════════
  "theme": "Tokyo Night",
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 13.0,
  "agent_ui_font_size": 13.0,
  "buffer_font_size": 12.0,
  "buffer_font_family": "Maple Mono NF",
  "buffer_font_features": {
    "calt": true, // standard ligatures (-> => != etc)
    "cv02": true, // alternative `a` with top arm
    "cv05": true, // alternative `g` in double story style
    "cv61": true, // alternative `,` and `;` with straight tail
    "cv63": true // alternative `<=` in arrow style
  },
  "cursor_blink": false,
  "rounded_selection": false,
  "colorize_brackets": true, // rainbow brackets

  // ══════════════════════════════════════════════════════════════════════════════
  // EDITOR BEHAVIOR
  // ══════════════════════════════════════════════════════════════════════════════
  "vim_mode": true,
  "scroll_beyond_last_line": "off", // prevent scrolling past last line
  "vertical_scroll_margin": 0, // cursor can reach screen edges
  "preferred_line_length": 140,
  "double_click_in_multibuffer": "open", // double-click opens file instead of selecting
  "close_on_file_delete": true, // auto-close tabs when file deleted on disk
  "use_smartcase_search": true, // case-insensitive unless uppercase used

  // ══════════════════════════════════════════════════════════════════════════════
  // VIM SETTINGS
  // ══════════════════════════════════════════════════════════════════════════════
  "vim": {
    "use_system_clipboard": "never", // use vim registers, not system clipboard
    "use_smartcase_find": true, // case-insensitive find unless uppercase
    "highlight_on_yank_duration": 500 // visual feedback on yank (ms)
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // WHICH-KEY (shows keybinding hints after delay)
  // ══════════════════════════════════════════════════════════════════════════════
  "which_key": {
    "enabled": true,
    "delay_ms": 400
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // GIT INTEGRATION
  // ══════════════════════════════════════════════════════════════════════════════
  "git": {
    "inline_blame": {
      "delay_ms": 200,
      "show_commit_summary": true
    }
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // INLAY HINTS & INDENT GUIDES
  // ══════════════════════════════════════════════════════════════════════════════
  "inlay_hints": {
    "enabled": true
  },
  "indent_guides": {
    "coloring": "indent_aware" // different colors per indent level
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // PREVIEW TABS
  // ══════════════════════════════════════════════════════════════════════════════
  "preview_tabs": {
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // MULTIBUFFER / EXCERPTS (search results, references)
  // ══════════════════════════════════════════════════════════════════════════════
  "excerpt_context_lines": 3,
  "expand_excerpt_lines": 10,

  // ══════════════════════════════════════════════════════════════════════════════
  // SEARCH
  // ══════════════════════════════════════════════════════════════════════════════
  "seed_search_query_from_cursor": "selection", // only use selected text

  // ══════════════════════════════════════════════════════════════════════════════
  // WINDOW & LAYOUT
  // ══════════════════════════════════════════════════════════════════════════════
  "use_system_window_tabs": true,
  "restore_on_startup": "launchpad",
  "bottom_dock_layout": "right_aligned",
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.7,
    "border_size": 0.5
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // TITLE BAR
  // ══════════════════════════════════════════════════════════════════════════════
  "title_bar": {
    "show_menus": true,
    "show_branch_icon": true,
    "show_sign_in": false
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // TAB BAR & TABS
  // ══════════════════════════════════════════════════════════════════════════════
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "show_diagnostics": "errors",
    "git_status": true,
    "file_icons": true,
    "activate_on_close": "neighbour"
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // SCROLLBAR
  // ══════════════════════════════════════════════════════════════════════════════
  "scrollbar": {
    "show": "system"
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // PANELS
  // ══════════════════════════════════════════════════════════════════════════════
  "project_panel": {
    "default_width": 300,
    "auto_fold_dirs": false,
    "auto_reveal_entries": false,
    "entry_spacing": "standard"
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "default_width": 300
  },
  "git_panel": {
    "tree_view": true,
    "sort_by_path": true,
    "default_width": 300
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // FILE FINDER
  // ══════════════════════════════════════════════════════════════════════════════
  "file_finder": {
    "modal_max_width": "medium",
    "include_ignored": "all"
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // DIAGNOSTICS
  // ══════════════════════════════════════════════════════════════════════════════
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // MESSAGES & CALLS
  // ══════════════════════════════════════════════════════════════════════════════
  "message_editor": {
    "auto_replace_emoji_shortcode": false
  },
  "calls": {
    "mute_on_join": true
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // AI / EDIT PREDICTIONS
  // ══════════════════════════════════════════════════════════════════════════════
  // ══════════════════════════════════════════════════════════════════════════════
  // AGENT (AI Assistant)
  // ══════════════════════════════════════════════════════════════════════════════
  "edit_predictions": {
    "provider": "mercury"
  },
  "agent": {
    "tool_permissions": {
      "default": "allow"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.6"
    },
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true,
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "enable_feedback": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.6"
    }
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // AGENT SERVERS (external AI agents)
  // ══════════════════════════════════════════════════════════════════════════════
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions",
      "favorite_models": ["opus", "default"],
      "default_config_options": {},
      "favorite_config_option_values": {}
    },
    "codex": {
      "default_mode": "full-access"
    },
    "gemini": {
      "ignore_system_version": false
    }
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // SSH CONNECTIONS
  // ══════════════════════════════════════════════════════════════════════════════
  "ssh_connections": [
    {
      "host": "joes-macbook-workstation",
      "username": "joelazar",
      "args": [],
      "projects": [
        {
          "paths": ["/Users/joelazar/Code/jets"]
        }
      ]
    },
    {
      "host": "openclaw",
      "args": [],
      "projects": [
        {
          "paths": ["/home/openclaw"]
        }
      ]
    }
  ],

  // ══════════════════════════════════════════════════════════════════════════════
  // TERMINAL
  // ══════════════════════════════════════════════════════════════════════════════
  "terminal": {
    "scrollbar": {
      "show": "never"
    },
    "max_scroll_history_lines": 50000,
    "blinking": "off",
    "font_family": "Maple Mono NF",
    "font_features": {
      "calt": true,
      "cv02": true,
      "cv05": true,
      "cv61": true,
      "cv63": true
    },
    "detect_venv": {
      "on": {
        "activate_script": "fish"
      }
    },
    "env": {
      "GIT_EDITOR": "zed --wait",
      "EDITOR": "zed"
    },
    "minimum_contrast": 0,
    "keep_selection_on_copy": false
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // DIRENV
  // ══════════════════════════════════════════════════════════════════════════════
  "load_direnv": "shell_hook",

  // ══════════════════════════════════════════════════════════════════════════════
  // FILE SCAN EXCLUSIONS (performance)
  // ══════════════════════════════════════════════════════════════════════════════
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.vscode",
    "**/.idea",
    "**/.serverless",
    "**/build",
    "**/dist",
    "**/coverage",
    "**/.venv",
    "**/__pycache__",
    "**/.ropeproject",
    "**/.pytest_cache",
    "**/.ruff_cache"
  ],

  // ══════════════════════════════════════════════════════════════════════════════
  // FILE TYPE ASSOCIATIONS
  // ══════════════════════════════════════════════════════════════════════════════
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**/defaults/**.yml",
      "**/defaults/**.yaml",
      "**/meta/**.yml",
      "**/meta/**.yaml",
      "**/tasks/**.yml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/**.yml",
      "**/group_vars/**.yaml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ],
    "Dockerfile": ["Dockerfile*"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml"
    ],
    "Shell Script": ["*.envrc*"],
    "Nginx": ["**/nginx/**/*.conf", "nginx.conf"]
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // LANGUAGE MODELS
  // ══════════════════════════════════════════════════════════════════════════════
  "language_models": {
    "openai": {
      "available_models": []
    },
    "anthropic": {
      "available_models": []
    },
    "google": {
      "available_models": []
    },
    "deepseek": {
      "api_url": "https://api.deepseek.com",
      "available_models": [
        {
          "name": "deepseek-chat",
          "display_name": "DeepSeek Chat",
          "max_tokens": 64000
        },
        {
          "name": "deepseek-reasoner",
          "display_name": "DeepSeek Reasoner",
          "max_tokens": 64000,
          "max_output_tokens": 4096
        }
      ]
    },
    "zed.dev": {
      "available_models": []
    },
    "ollama": {
      "available_models": [
        {
          "name": "devstral",
          "display_name": "Mistral Devstral - 24B",
          "max_tokens": 131072,
          "supports_tools": true
        },
        {
          "name": "qwen3-coder:30b",
          "display_name": "Qwen 3 Coder - 30B-A3B",
          "max_tokens": 262144,
          "supports_tools": true
        },
        {
          "name": "qwen3:4b",
          "display_name": "Qwen 3 - 4B",
          "max_tokens": 32768,
          "supports_tools": true
        },
        {
          "name": "gpt-oss:20b",
          "display_name": "GPT OSS - 20B",
          "max_tokens": 131072,
          "supports_tools": true,
          "supports_thinking": true,
          "supports_images": true
        }
      ]
    },
    "openai_compatible": {
      "Cerebras": {
        "api_url": "https://api.cerebras.ai/v1",
        "available_models": [
          {
            "name": "zai-glm-4.7",
            "display_name": "GLM-4.7",
            "max_tokens": 131072,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": true,
              "prompt_cache_key": false
            }
          }
        ]
      }
    }
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // LSP CONFIGURATIONS
  // ══════════════════════════════════════════════════════════════════════════════
  "lsp": {
    // Rust: use clippy, enable all features and proc macros
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "cargo": {
          "allFeatures": true,
          "loadOutDirsFromCheck": true,
          "buildScripts": {
            "enable": true
          }
        },
        "procMacro": {
          "enable": true,
          "ignored": {
            "async-trait": ["async_trait"],
            "napi-derive": ["napi"],
            "async-recursion": ["async_recursion"]
          }
        },
        "rust": {
          "analyzerTargetDir": true
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    },
    // Python: basedpyright with relaxed type checking
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python",
          "analysis": {
            "diagnosticSeverityOverrides": {
              "reportAny": "none",
              "reportMissingParameterType": "none",
              "reportMissingTypeArgument": "none",
              "reportMissingTypeStubs": "none",
              "reportUnknownArgumentType": "none",
              "reportUnknownLambdaType": "none",
              "reportUnknownMemberType": "none",
              "reportUnknownParameterType": "none",
              "reportUnknownVariableType": "none"
            }
          }
        }
      }
    },
    // Ansible: lint enabled
    "ansible": {
      "settings": {
        "ansible": {
          "path": "ansible"
        },
        "executionEnvironment": {
          "enabled": false
        },
        "python": {
          "interpreterPath": "python3"
        },
        "validation": {
          "enabled": true,
          "lint": {
            "enabled": true,
            "path": "ansible-lint"
          }
        }
      }
    },
    // Go: gofumpt, semantic tokens, codelenses, hints
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "usePlaceholders": false,
        "completeUnimported": true,
        "staticcheck": false,
        "semanticTokens": true,
        "directoryFilters": [
          "-.git",
          "-.vscode",
          "-.idea",
          "-.vscode-test",
          "-node_modules"
        ],
        "experimentalPostfixCompletions": true,
        "codelenses": {
          "gc_details": true,
          "generate": true,
          "regenerate_cgo": true,
          "run_govulncheck": true,
          "test": true,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": true
        },
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        },
        "analyses": {
          "nilness": true,
          "unusedparams": true,
          "unusedwrite": true,
          "useany": true
        }
      }
    },
    // golangci-lint
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--output.text.path="
        ]
      }
    }
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // LANGUAGE-SPECIFIC SETTINGS
  // ══════════════════════════════════════════════════════════════════════════════
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "external": {
            "command": "bash",
            "arguments": [
              "-c",
              "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
            ]
          }
        }
      ],
      "language_servers": ["ty", "..."]
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Go": {
      "format_on_save": "on",
      "language_servers": ["!harper-ls", "..."]
    },
    "Markdown": {
      "format_on_save": "on"
    },
    "Terraform": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "tofu",
          "arguments": ["fmt", "-"]
        }
      }
    },
    "Fish": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "fish_indent",
          "arguments": []
        }
      }
    }
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // AUTO-INSTALL EXTENSIONS
  // ══════════════════════════════════════════════════════════════════════════════
  "auto_install_extensions": {
    "ansible": true,
    "basher": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "github-actions": true,
    "golangci-lint": true,
    "harper": true,
    "helm": true,
    "latex": true,
    "log": true,
    "lua": true,
    "make": true,
    "markdown-oxide": true,
    "material-icon-theme": true,
    "nginx": true,
    "nix": true,
    "prisma": true,
    "scheme": true,
    "sql": true,
    "terraform": true,
    "tokyo-night": true,
    "toml": true,
    "vscode-icons": true,
    "wakatime": true,
    "zig": true
  },

  // ══════════════════════════════════════════════════════════════════════════════
  // THEME OVERRIDES (empty - using defaults)
  // ══════════════════════════════════════════════════════════════════════════════
  "theme_overrides": {}
}
