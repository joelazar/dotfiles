{
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "vim_mode": true,
  "theme": "Catppuccin Mocha",
  "buffer_font_family": "Fira Code",
  "cursor_blink": false,
  "inlay_hints": {
    "enabled": true
  },
  "assistant": {
    "default_open_ai_model": "gpt-4-1106-preview"
  },
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "terminal": {
    "blinking": "terminal_controlled",
    "font_family": "FiraCode Nerd Font",
    "font_features": {
      "liga": true,
      "ss02": true,
      "ss03": true,
      "ss05": true,
      "ss07": true
    }
  }
}
