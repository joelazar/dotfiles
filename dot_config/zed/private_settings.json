{
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false
    }
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": true
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.vscode",
    "**/.idea",
    "**/.serverless",
    "**/build",
    "**/dist",
    "**/coverage",
    "**/.venv",
    "**/__pycache__",
    "**/.ropeproject",
    "**/.pytest_cache",
    "**/.ruff_cache"
  ],
  "bottom_dock_layout": "right_aligned",
  "language_models": {
    "openai": { "available_models": [] },
    "anthropic": { "available_models": [] },
    "google": { "available_models": [] },
    "deepseek": {
      "api_url": "https://api.deepseek.com",
      "available_models": [
        {
          "name": "deepseek-chat",
          "display_name": "DeepSeek Chat",
          "max_tokens": 64000
        },
        {
          "name": "deepseek-reasoner",
          "display_name": "DeepSeek Reasoner",
          "max_tokens": 64000,
          "max_output_tokens": 4096
        }
      ]
    },
    "zed.dev": { "available_models": [] },
    "ollama": {
      "available_models": [
        {
          "name": "devstral",
          "display_name": "Mistral Devstral - 24B",
          "max_tokens": 131072,
          "supports_tools": true
        },
        {
          "name": "qwen3-coder:30b",
          "display_name": "Qwen 3 Coder - 30B-A3B",
          "max_tokens": 262144,
          "supports_tools": true
        },
        {
          "name": "qwen3:4b",
          "display_name": "Qwen 3 - 4B",
          "max_tokens": 32768,
          "supports_tools": true
        },
        {
          "name": "gpt-oss:20b",
          "display_name": "GPT OSS - 20B",
          "max_tokens": 131072,
          "supports_tools": true,
          "supports_thinking": true,
          "supports_images": true
        }
      ]
    }
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "features": {
    "edit_prediction_provider": "zed"
    // "edit_prediction_provider": "copilot"
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "search": { "button": true },
  "diagnostics": { "button": true },
  // "global_lsp_settings": { "button": false },
  "title_bar": {
    "show_branch_icon": true,
    "show_project_items": false,
    "show_branch_name": true,
    "show_user_picture": false,
    "show_onboarding_banner": true,
    "show_sign_in": false
  },
  "seed_search_query_from_cursor": "selection",
  "show_edit_predictions": true,
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true,
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "always_allow_tool_actions": true,
    "enable_feedback": false,
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "project_notifications": true,
          "web_search": true,
          "contents": true,
          "open": true,
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "button": true,
    "dock": "right",
    "stream_edits": true,
    "default_width": 640,
    "default_height": 320,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "project_panel": {
    "file_icons": true,
    "folder_icons": true,
    "default_width": 300,
    "dock": "left",
    "auto_fold_dirs": false,
    "button": true,
    "auto_reveal_entries": false,
    "entry_spacing": "standard"
  },
  "outline_panel": {
    "dock": "right",
    "button": true
  },
  "collaboration_panel": {
    "button": true
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": true
  },
  "git_panel": {
    "button": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "close_position": "right",
    "activate_on_close": "neighbour"
  },
  "file_finder": {
    "modal_max_width": "medium",
    "include_ignored": true
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.7,
    "border_size": 0.5
  },
  "scrollbar": {
    "show": "system"
  },
  "preferred_line_length": 140,
  "show_wrap_guides": true,
  "auto_signature_help": false,
  "ui_font_size": 14.0,
  "buffer_font_size": 13.0,
  "vim_mode": true,
  "theme": "Catppuccin Mocha",
  "icon_theme": "VSCode Icons (Dark)",
  "buffer_font_family": "FiraCode Nerd Font Ret",
  "buffer_font_features": {
    "liga": true,
    "ss02": true,
    "ss03": true,
    "ss05": true,
    "ss07": true
  },
  "cursor_blink": false,
  // prevent the buffer from scrolling beyond the last line
  "scroll_beyond_last_line": "off",
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  "inlay_hints": {
    "enabled": true
  },
  "vim": {
    "toggle_relative_line_numbers": false,
    "use_system_clipboard": "never",
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 500
  },
  "use_smartcase_search": true,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
    // "coloring": "fixed"
  },
