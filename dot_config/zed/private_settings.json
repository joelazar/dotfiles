{
  "inline_completions": {
    "disabled_globs": ["", "**/.*"]
  },
  "language_models": {
    "openai": {
      "version": "1",
      "available_models": []
    },
    "anthropic": {
      "version": "1",
      "available_models": []
    },
    "ollama": {
      "low_speed_timeout_in_seconds": 120,
      "available_models": [
        {
          "provider": "ollama",
          "name": "llama3.1:latest",
          "display_name": "llama3.1",
          "max_tokens": 128000
        }
      ]
    },
    "copilot_chat": {
      "available_models": []
    },
    "google": {
      "available_models": []
    }
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "features": {
    "inline_completion_provider": "copilot"
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "seed_search_query_from_cursor": "selection",
  "assistant": {
    "version": "2",
    "dock": "right",
    "default_width": 640,
    "default_height": 320,
    "default_model": {
      // "provider": "anthropic",
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true,
    "close_position": "right",
    "file_icons": true
  },
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 140,
  "auto_signature_help": false,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "vim_mode": true,
  "theme": "Catppuccin Mocha",
  "buffer_font_family": "FiraCode Nerd Font",
  "cursor_blink": false,
  // prevent the buffer from scrolling beyond the last line
  "scroll_beyond_last_line": "off",
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  "inlay_hints": {
    "enabled": true
  },
  // "gutter": {
  //   // disable line numbers completely:
  //   "line_numbers": false
  // },
  "vim": {
    "toggle_relative_line_numbers": false,
    "use_system_clipboard": "never",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "terminal": {
    "max_scroll_history_lines": 30000,
    "blinking": "off",
    "font_family": "FiraCode Nerd Font",
    "font_features": {
      "liga": true,
      "ss02": true,
      "ss03": true,
      "ss05": true,
      "ss07": true
    },
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "fish"
      }
    },
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"]
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "external": {
            "command": "bash",
            "arguments": ["-c", "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"]
          }
        }
      ],
      "language_servers": ["!pyright", "basedpyright", "ruff"]
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python",
          "analysis": {
            "diagnosticSeverityOverrides": {
              "reportAny": "none",
              "reportMissingParameterType": "none",
              "reportMissingTypeArgument": "none",
              "reportMissingTypeStubs": "none",
              "reportUnknownArgumentType": "none",
              "reportUnknownLambdaType": "none",
              "reportUnknownMemberType": "none",
              "reportUnknownParameterType": "none",
              "reportUnknownVariableType": "none"
            }
          }
        }
      }
    }
  },
  "auto_install_extensions": {
    "basedpyright": true,
    "basher": true,
    "catppuccin": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "fish": true,
    "git-firefly": true,
    "html": true,
    "latex": true,
    "log": true,
    "lua": true,
    "make": true,
    "markdown-oxide": true,
    "nix": true,
    "ruff": true,
    "scm": true,
    "sql": true,
    "toml": true,
    "wakatime": true,
    "zig": true
  }
}
