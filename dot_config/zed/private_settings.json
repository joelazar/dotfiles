{
  "language_models": {
    "openai": {
      "available_models": ["gpt-4o", "gpt-4o-mini"]
    },
    "anthropic": {
      "available_models": ["claude-3-5-sonnet-20240620"]
    },
    "ollama": {
      "available_models": ["llama3.1"]
    }
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2",
    "provider": null
  },
  "tab_bar": {
    "show": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "vim_mode": true,
  "theme": "Catppuccin Mocha",
  "buffer_font_family": "FiraCode Nerd Font",
  "cursor_blink": false,
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  "inlay_hints": {
    "enabled": true
  },
  "vim": {
    "use_system_clipboard": "never",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "terminal": {
    "max_scroll_history_lines": 30000,
    "blinking": "off",
    "font_family": "FiraCode Nerd Font",
    "font_features": {
      "liga": true,
      "ss02": true,
      "ss03": true,
      "ss05": true,
      "ss07": true
    },
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "fish"
      }
    },
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"]
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        // { "language_server": { "name": "ruff" } },
        {
          "external": {
            "command": "bash",
            "arguments": [
              "-c",
              "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
            ]
          }
        }
      ],
      "language_servers": ["pyright", "ruff"]
    }
  }
}
