# Navigation (lalt - ...)
# Space Navigation (five spaces per display)
lalt - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] && yabai -m space --focus $SPACES[1]
lalt - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] && yabai -m space --focus $SPACES[2]
lalt - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] && yabai -m space --focus $SPACES[3]
lalt - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] && yabai -m space --focus $SPACES[4]
lalt - 5 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[5] ]] && yabai -m space --focus $SPACES[5]

# Focus window
lalt - h : yabai -m window --focus west
lalt - l : yabai -m window --focus east

# Focus window in stacked
lalt - j : if [ "$(yabai -m query --spaces --space | jq -r '.type')" = "stack" ]; then yabai -m window --focus stack.next || yabai -m window --focus stack.first; else yabai -m window --focus south; fi
lalt - k : if [ "$(yabai -m query --spaces --space | jq -r '.type')" = "stack" ]; then yabai -m window --focus stack.prev || yabai -m window --focus stack.last; else yabai -m window --focus north; fi

# Alternative way for window focus
# lalt - h : yabai -m window --focus west  || yabai -m display --focus west
# lalt - j : yabai -m window --focus south || yabai -m display --focus south
# lalt - k : yabai -m window --focus north || yabai -m display --focus north
# lalt - l : yabai -m window --focus east  || yabai -m display --focus east

# Toggle layout
shift + lalt - d : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')

# Toggle split orientation of the selected windows node
shift + lalt - s : yabai -m window --toggle split

# Balance out tree of windows (resize to occupy same area)
shift + lalt - e : yabai -m space --balance

# Float / Unfloat window
shift + lalt - return : yabai -m window --toggle float

# Make window zoom to fullscreen
lalt - f : yabai -m window --toggle zoom-fullscreen

# Make window zoom to native fullscreen
shift + lalt - f : yabai -m window --toggle native-fullscreen

# Moving windows in spaces
shift + lalt - h : yabai -m window --swap west || $(yabai -m window --display west && yabai -m display --focus west && yabai -m window --warp last) || yabai -m window --move rel:-10:0
shift + lalt - j : yabai -m window --swap south || $(yabai -m window --display south && yabai -m display --focus south) || yabai -m window --move rel:0:10
shift + lalt - k : yabai -m window --swap north || $(yabai -m window --display north && yabai -m display --focus north) || yabai -m window --move rel:0:-10
shift + lalt - l : yabai -m window --swap east || $(yabai -m window --display east && yabai -m display --focus east && yabai -m window --warp first) || yabai -m window --move rel:10:0

# Moving windows between spaces
shift + lalt - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] \
                  && yabai -m window --space $SPACES[1]

shift + lalt - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] \
                  && yabai -m window --space $SPACES[2]

shift + lalt - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] \
                  && yabai -m window --space $SPACES[3]

shift + lalt - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] \
                  && yabai -m window --space $SPACES[4]

shift + lalt - 5 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[5] ]] \
                  && yabai -m window --space $SPACES[5]

# Resize windows
ctrl + lalt - h : yabai -m window --resize right:-50:0 || yabai -m window --resize left:-50:0
ctrl + lalt - j : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
ctrl + lalt - k : yabai -m window --resize bottom:0:-50 || yabai -m window --resize top:0:-50
ctrl + lalt - l : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# Space management
ctrl + lalt - n : yabai -m space --create
ctrl + lalt - d : yabai -m space --destroy

# Change focus between external displays (left and right)
lalt - u : yabai -m display --focus south || yabai -m display --focus north
lalt - d : yabai -m display --focus north || yabai -m display --focus south

# Toggle padding
shift + lalt - x : current_config=$(yabai -m config external_bar) && if [[ $current_config == "main:38:0" ]]; then yabai -m config external_bar off:0:0; else yabai -m config external_bar main:38:0; fi

# Restart service
shift + lalt - r : yabai --restart-service && skhd --restart-service
