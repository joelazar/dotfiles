## Navigation (lalt - ...)
# Space Navigation (four spaces per display): lalt - {1, 2, 3, 4, 5}
lalt - 1 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[1]; yabai -m space --focus $SPACES[1]; end
lalt - 2 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[2]; yabai -m space --focus $SPACES[2]; end
lalt - 3 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[3]; yabai -m space --focus $SPACES[3]; end
lalt - 4 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[4]; yabai -m space --focus $SPACES[4]; end
lalt - 5 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[5]; yabai -m space --focus $SPACES[5]; end

# Window Navigation (through display borders): lalt - {h, j, k, l}
lalt - h : yabai -m window --focus west  || yabai -m display --focus west
lalt - j : yabai -m window --focus south || yabai -m display --focus south
lalt - k : yabai -m window --focus north || yabai -m display --focus north
lalt - l : yabai -m window --focus east  || yabai -m display --focus east

# change focus between external displays
alt - u: yabai -m display --focus north
alt - d: yabai -m display --focus south

# Float / Unfloat window: lalt - space
shift + lalt - return: yabai -m window --toggle float

# Make window zoom to fullscreen: lalt - f
lalt - f : yabai -m window --toggle zoom-fullscreen

# Make window zoom to parent node: shift+lalt - f
shift + lalt - f : yabai -m window --toggle zoom-parent

## Window Movement (shift + lalt - ...)
# Moving windows in spaces: shift + lalt - {h, j, k, l}
shift + lalt - h : yabai -m window --warp west || $(yabai -m window --display west && yabai -m display --focus west && yabai -m window --warp last) || yabai -m window --move rel:-10:0
shift + lalt - j : yabai -m window --warp south || $(yabai -m window --display south && yabai -m display --focus south) || yabai -m window --move rel:0:10
shift + lalt - k : yabai -m window --warp north || $(yabai -m window --display north && yabai -m display --focus north) || yabai -m window --move rel:0:-10
shift + lalt - l : yabai -m window --warp east || $(yabai -m window --display east && yabai -m display --focus east && yabai -m window --warp first) || yabai -m window --move rel:10:0

# Toggle split orientation of the selected windows node: shift + lalt - s
shift + lalt - s : yabai -m window --toggle split

# Moving windows between spaces: shift + lalt - {1, 2, 3, 4, 5 } (Assumes 4 Spaces Max per Display)
shift + lalt - 1 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[1]; yabai -m window --space $SPACES[1]; end
shift + lalt - 2 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[2]; yabai -m window --space $SPACES[2]; end
shift + lalt - 3 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[3]; yabai -m window --space $SPACES[3]; end
shift + lalt - 4 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[4]; yabai -m window --space $SPACES[4]; end
shift + lalt - 5 : set SPACES (yabai -m query --displays --display | jq '.spaces[]'); if test -n $SPACES[5]; yabai -m window --space $SPACES[5]; end

## Resize (ctrl + lalt - ...)
# Resize windows: ctrl + lalt - {h, j, k, l}
ctrl + lalt - h : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
ctrl + lalt - j : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
ctrl + lalt - k : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
ctrl + lalt - l : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

# balance out tree of windows (resize to occupy same area)
ctrl + lalt - e : yabai -m space --balance

## Stacks (shift + ctrl - ...)
# Add the active window to the window or stack to the {direction}: shift + ctrl - {h, j, k, l}
shift + ctrl - h : yabai -m window  west --stack $(yabai -m query --windows --window | jq -r '.id')
shift + ctrl - j : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id')
shift + ctrl - k : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id')
shift + ctrl - l : yabai -m window  east --stack $(yabai -m query --windows --window | jq -r '.id')

# Stack Navigation: shift + ctrl - {n, p}
shift + ctrl - n : yabai -m window --focus stack.next
shift + ctrl - p : yabai -m window --focus stack.prev

# Move window to display up and down
shift + ctrl - u : yabai -m window --display north; yabai -m display --focus north;
shift + ctrl - d : yabai -m window --display south; yabai -m display --focus south;

# Move window to prev and next space
shift + lalt - p : yabai -m window --space prev;
shift + lalt - n : yabai -m window --space next;

# Restart service
shift + lalt - r : yabai --restart-service; skhd --restart-service
